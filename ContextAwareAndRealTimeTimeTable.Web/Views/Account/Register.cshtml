@model ContextAwareAndRealTimeTimeTable.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2></h2>

<div class="row">
    <div class="col-md-3">

    </div>

    <div class="col-md-6 login">
        <div class="row">

            <div class="panel-heading boxdefault modified"><h4>Create an Account.</h4></div>

        </div>
       
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                 <div class="form-group">
                     <label class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control text" , @placeholder = "First Name"})
                </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                      @Html.TextBoxFor(m => m.LastName, new { @class = "form-control text" , @placeholder = "Last Name" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control text", @placeholder = "Email Address e.g sserurich@gmail.com" })
                    </div>
                </div>
                
               <div class="form-group">
                 <label class="col-md-2 control-label"></label>
                 <div class="col-md-10">
                 @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control text", @placeholder = "Mobile e.g 256784007618" })
                </div>
             </div>
                
                <div class="form-group">
                    <label class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control text", @placeholder = "Password" })
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control text", @placeholder = "Confirm Password" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default text-center btn-custom btn-custom-modified" value="Register" />
                    </div>
                </div>
            }

    </div>
    <div class="col-md-3">

    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
