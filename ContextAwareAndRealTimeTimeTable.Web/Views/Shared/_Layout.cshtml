<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Context Aware And Realtime TimeTable</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700&amp;subset=latin" rel="stylesheet">

    <link href="/css/kendo/kendo.common.min.css" rel="stylesheet" />
    <link href="/css/kendo/kendo.default.min.css" rel="stylesheet" />
    <link href="/css/kendo/kendo.dataviz.min.css" rel="stylesheet" />
    <link href="/css/kendo/kendo.dataviz.default.min.css" rel="stylesheet" />
    <style type="text/css" >
        .modified{
            background-color:#f2f2f2 !important;
            color:#337ab7 !important;
        }
        .modified>a{
            color:#337ab7 !important;
        }
        .blueColor{
            color: #337ab7 !important;
        }
        .body-content{
            color:#337ab7 !important;
        }

    </style>
    <!--
        Angularjs
    -->
    <link rel="stylesheet" href="/css/angular-motion.min.css">
    <link rel="stylesheet" href="/css/ng-table.min.css">

    <link href="/js/plugins/bootstrap-select/bootstrap-select.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">

</head>
<body ng-app="appContextAwareTT">
    <div class="navbar  navbar-fixed-top modified">
        <div class="container">
            <div class="">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/Home/Index/" class="navbar-brand modified">Context Aware And Realtime Timetable</a>
                   @*@Html.ActionLink("Context Aware And Realtime Timetable", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav nav-tabs">
                    <li><a href="@ViewData["RootNav"]#/activity/list">Lessons</a></li>                   
                    <li>@Html.ActionLink("Tests", "About", "Home")</li>
                    <li>@Html.ActionLink("Exams", "Contact", "Home")</li>  
                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="">Manage <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Roles", "Index", "Roles")</li>
                            <li>@Html.ActionLink("Manage All Users", "Index", "UsersAdmin")</li>
                            <li>@Html.ActionLink("Users To Verify As Lecuters", "UsersToVerifyAsLecturers", "UsersAdmin")</li>
                        </ul>
                    </li>
                    }                 

                    @if (Request.IsAuthenticated)
                    {
                                         
                      <li class="dropdown">
                      <a class="dropdown-toggle" data-toggle="dropdown" href="">Lecturer/Student <span class="caret"></span></a>
                     <ul class="dropdown-menu">
                      <li><a class="" href="@ViewData["RootNav"]#/student/create/0">Join As Student</a></li>
                      <li>@Html.ActionLink("Request For Verification As Lecturer","Verify","Verification")</li>
                      @*<li> <a class="" href="@ViewData["RootNav"]#/student/create/0">Request Verification As Lecturer</a> </li>*@
                      <li><a href="@ViewData["RootNav"]#/student/preferences">Create Preferences</a></li>                      
                     <li ><a href="@ViewData["RootNav"]#/student/preferences/view">View Your Preferences</a></li>
                     <li><a href="@ViewData["RootNav"]#/student/prefered/timetable/view">Personalised Timetable</a></li>
                    </ul>
                    </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="modified">&copy; @DateTime.Now.Year - CONTEXT AWARE AND REALTIME TIMETABLE</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    @*<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.0-beta.2/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.0-beta.2/angular-route.min.js"></script>
    <script src="/js/plugins/bootstrap-select/bootstrap-select.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.0-beta.2/angular-animate.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.0-beta.2/angular-resource.js"></script>*@
  
    <script src="/js/angularjs/angular.min.js"></script>
    <script src="/js/angularjs/angular-route.min.js"></script>
    <script src="~/js/angularjs/angular-animate.js"></script>
    <script src="/js/angularjs/angular-resource.js"></script>
    <script src="/js/angularjs/1.2.18/angular-sanitize.js"></script>
    <script src="/js/moment.js"></script>
    <script src="/js/kendo.all.min.js"></script>
    <script src="/js/ng-table.min.js"></script>

    <script type="text/javascript" src="/app/app.js"></script> 
    <script type="text/javascript" src="/app/controllers/app-controller.js"></script>
    <script type="text/javascript" src="/app/directives/checklist-model.js"></script>
    <script src="/js/ui-bootstrap-tpls-0.12.1.min.js"></script>
</body>
</html>
